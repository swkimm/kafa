{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "watchAssets": true,
    "tsConfigPath": "tsconfig.build.json",
    "builder": {
      "type": "swc"
    },
    "typeCheck": false,
    "assets": [
      {
        "include": "email/templates/**/*"
      }
    ]
  }
}
